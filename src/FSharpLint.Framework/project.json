{
  "name": "FSharpLint.Framework",
  "version": "1.0.0-*",
  "buildOptions": {
    "compilerName": "fsc",
    "compile": {
      "includeFiles": [
        "Utilities.fs",
        "HintParser.fs",
        "Configuration.fs",
        "Ast.fs",
        "AstInfo.fs",
        "AbstractSyntaxArray.fs",
        "Resources.fs",
        "ParseFile.fs",
        "FuzzyHintMatcher.fs"
      ]
    }
  },

  // Supposedly deprecated and replaced by embed but no clear way to specify a named resource shown in any documentation
  "resource": [
    "DefaultConfiguration.FSharpLint",
    "Text.resx"
  ],
  "namedResource": {
    "Text": "Text.resx",
    "DefaultConfiguration.FSharpLint": "DefaultConfiguration.FSharpLint"
  },

  "dependencies": {
    "Microsoft.FSharp.Core.netcore": "1.0.0-alpha-160509",
    "FSharp.Compiler.Service.netcore": "1.0.0-alpha-00001",
    "FSharp.Compiler.Service.ProjectCracker.netcore": "1.0.0-alpha-00001",
    "FParsec": "1.0.2",
    "NETStandard.Library": "1.5.0-rc2-*"
  },
  "tools": {
    "dotnet-compile-fsc": {
      "version": "1.0.0-preview1-*",
      "imports": [
        "dnxcore50",
        "portable-net45+win81",
        "netstandard1.3"
      ]
    }
  },
  "frameworks": {
    "netstandard1.5": {
      "imports": [
        "portable-net45+win8",
        "dnxcore50"
      ]
    }
  }
}